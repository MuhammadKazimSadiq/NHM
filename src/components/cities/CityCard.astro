---
import { Image } from "astro:assets";

const { img, alt, title, description } = Astro.props;
---

<article
  class="flex flex-col sm:flex-row items-start gap-6 lg:gap-5">
  <!-- Image -->
    <div
    class="shrink-0 w-full h-48 sm:w-full sm:max-w-70 sm:h-45 lg:w-32 lg:h-32 rounded-2xl overflow-hidden shadow-[0_10px_24px_rgba(0,0,0,0.08)]">
    <Image src={img} alt={alt} class="w-full h-full object-cover"/>
  </div>

  <!-- Text -->
  <div>
    <h3
      class=" font-heading font-semibold text-xl text-neutral-900 underline mb-1.5">
      {title}
    </h3>

    <p
      class=" text-base leading-relaxed text-neutral-700">
      {description}
    </p>
  </div>
</article>