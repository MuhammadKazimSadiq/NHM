---
import { Image } from "astro:assets";

const { img, alt, href, title, description } = Astro.props;
---

<article
  class="flex flex-col sm:flex-row items-center gap-6 lg:gap-5">
  <!-- Image -->
 <div
  class="shrink-0 w-full h-56 sm:w-full sm:max-w-80 sm:h-52 lg:w-36 lg:h-36 rounded-2xl overflow-hidden shadow-[0_10px_24px_rgba(0,0,0,0.08)]">
  <Image src={img} alt={alt} class="w-full h-full object-cover"/>
</div>


  <!-- Text -->
  <div>
    <a
      href={href}
      class=" font-heading font-semibold text-xl text-neutral-900 underline mb-1.5">
      {title}
  </a>

    <p
      class=" text-base leading-relaxed text-neutral-700">
      {description}
    </p>
  </div>
</article>