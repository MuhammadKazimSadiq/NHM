---
import { Image } from "astro:assets";
const {title, text, img, imgAlt} = Astro.props;
---

  <section class="py-24">
    <div class="max-w-7xl mx-auto px-8 grid md:grid-cols-2 gap-16 items-center">

      <div>
        <Image
                src="/src/images/city/location-icon.svg"
                alt="location-icon"
                width="48"
                height="48"
                class="mb-8"
            />
        <h2 class="text-6xl mb-6 font-bold">{title}</h2>
        <p class="text-neutral-600 max-w-xl text-xl">{text}</p>
        <button
            class="block w-full bg-[#ff8c02] text-white font-semibold py-4 rounded-full text-center hover:bg-[#e67f02] transition mt-8 text-xl">
            Book Now
        </button>
      </div>

      <div class="space-y-10">
            <Image
                src={img}
                alt={imgAlt}
                class="max-h-140 w-full object-cover rounded-4xl"
            />
      </div>

    </div>
  </section>