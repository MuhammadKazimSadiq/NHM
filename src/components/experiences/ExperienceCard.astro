---
import { Image } from "astro:assets";
const { img, alt, title, description } = Astro.props;
---

<div
  class="flex flex-col items-center justify-center transition-all duration-300 motion-reduce:transition-none"
>
  <Image src={img} alt={alt} class="w-full rounded-3xl"/>

  <h3
    class="mt-6 mb-2 text-center font-heading font-semibold text-xl leading-relaxed text-white max-md:text-lg"
    set:html={title}
  ></h3>

  <p
    class="mt-2 mb-8 text-center text-base leading-relaxed text-neutral-400 grow">
    {description}
  </p>
</div>
