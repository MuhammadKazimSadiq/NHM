---
import ExperienceCard from "./ExperienceCard.astro";
import Ramsar from "/src/images/experiences/ramsar.jpg";
import Shiraz from "/src/images/experiences/shiraz.jpg";
import Isfahan from "/src/images/experiences/isfahan.jpg";
import Tehran from "/src/images/experiences/tehran.jpg";
import Gilan from "/src/images/experiences/gilan.jpg";
import Hormuz from "/src/images/experiences/hormuz.jpg";

const experiences = [
  {
    img: Ramsar,
    alt: "Ramsar",
    title: "Boat Ride on the<br />Caspian Sea (Ramsar)",
    description:
      "Enjoy a serene boat trip with views of lush forests meeting the sea. This may be the highlight of your entire trip!",
  },
  {
    img: Shiraz,
    alt: "Shiraz",
    title: "Persepolis (Shiraz)",
    description:
      "Walk through the ruins of the Achaemenid Empire's ceremonial capital, a UNESCO World Heritage site.",
  },
  {
    img: Isfahan,
    alt: "Isfahan",
    title: "Traditional Tea (Isfahan)",
    description:
      "Sip saffron tea in historic caravanserais and admire Persian architecture.",
  },
  {
    img: Tehran,
    alt: "Tehran",
    title: "Cable Car to<br />Tochal Peak (Tehran)",
    description:
      "Ride up the Alborz Mountains for panoramic views over the capital.",
  },
  {
    img: Gilan,
    alt: "Gilan",
    title: "Masuleh Village (Gilan Province)",
    description:
      "Wander through terraced houses built into the mountainside, surrounded by forests.",
  },
  {
    img: Hormuz,
    alt: "Hormuz",
    title: "Rainbow Valley (Hormuz Island)",
    description:
      "Marvel at surreal landscapes of red, yellow, and purple earth along the Persian Gulf.",
  },
];
---

<section class="bg-[#00634d] py-32 max-md:py-12">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-3 gap-8 max-lg:grid-cols-2 max-md:grid-cols-1 max-md:gap-6">
      {experiences.map((exp) => (
        <ExperienceCard {...exp} />
      ))}
    </div>
  </div>
</section>
