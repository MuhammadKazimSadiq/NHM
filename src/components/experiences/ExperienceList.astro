 <section class="experiences-section">
      <div class="container">
        <div class="cards-grid">
          <!-- Card 1 -->
          <div class="experience-card">
            <img src="/src/images/experiences/ramsar.jpg" alt="Ramsar" />
            <h3 class="card-title">
              Boat Ride on the<br />Caspian Sea (Ramsar)
            </h3>
            <p class="card-description">
              Enjoy a serene boat trip with views of lush forests meeting the
              sea. This may be the highlight of your entire trip!
            </p>
            <!-- <div class="card-separator"></div>
            <a href="#" class="explore-link">Explore</a> -->
          </div>

          <!-- Card 2 -->
          <div class="experience-card">
            <img src="/src/images/experiences/shiraz.jpg" alt="Shiraz" />
            <h3 class="card-title">Persepolis (Shiraz)</h3>
            <p class="card-description">
              Walk through the ruins of the Achaemenid Empire's ceremonial
              capital, a UNESCO World Heritage site.
            </p>
            <!-- <div class="card-separator"></div>
            <a href="#" class="explore-link">Explore</a> -->
          </div>

          <!-- Card 3 -->
          <div class="experience-card">
            <img src="/src/images/experiences/isfahan.jpg" alt="Isfahan" />
            <h3 class="card-title">Traditional Tea (Isfahan)</h3>
            <p class="card-description">
              Sip saffron tea in historic caravanserais and admire Persian
              architecture.
            </p>
            <!-- <div class="card-separator"></div>
            <a href="#" class="explore-link">Explore</a> -->
          </div>

          <!-- Card 4 -->
          <div class="experience-card">
            <img src="/src/images/experiences/tehran.jpg" alt="Tehran" />
            <h3 class="card-title">Cable Car to<br />Tochal Peak (Tehran)</h3>
            <p class="card-description">
              Ride up the Alborz Mountains for panoramic views over the capital.
            </p>
            <!-- <div class="card-separator"></div>
            <a href="#" class="explore-link">Explore</a> -->
          </div>

          <!-- Card 5 -->
          <div class="experience-card">
            <img src="/src/images/experiences/gilan.jpg" alt="Gilan" />
            <h3 class="card-title">Masuleh Village (Gilan Province)</h3>
            <p class="card-description">
              Wander through terraced houses built into the mountainside,
              surrounded by forests.
            </p>
            <!-- <div class="card-separator"></div>
            <a href="#" class="explore-link">Explore</a> -->
          </div>

          <!-- Card 6 -->
          <div class="experience-card">
            <img src="/src/images/experiences/hormuz.jpg" alt="Hormuz" />
            <h3 class="card-title">Rainbow Valley (Hormuz Island)</h3>
            <p class="card-description">
              Marvel at surreal landscapes of red, yellow, and purple earth
              along the Persian Gulf.
            </p>
            <!-- <div class="card-separator"></div>
            <a href="#" class="explore-link">Explore</a> -->
          </div>
        </div>
      </div>
