---
import CityGroup from "./CityGroup.astro"
import Mashhad from "/src/images/cities/mashhad.jpeg";
import Qum from "/src/images/cities/qum.png";
import Tehran from "/src/images/cities/tehran.webp";
import Isfahan from "/src/images/cities/isfahan.jpg";
import Kashan from "/src/images/cities/kashan.jpg";
import Yazd from "/src/images/cities/yazd.jpg";
import Shiraz from "/src/images/cities/shiraz.jpg";
import Tabriz from "/src/images/cities/tabriz.jpg";
import Kerman from "/src/images/cities/kerman.jpg";
import Hamedan from "/src/images/cities/hamedan.jpeg";
import Rasht from "/src/images/cities/rasht.jpg";
import Qazvin from "/src/images/cities/qazvin.jpg";
import Ramsar from "/src/images/cities/ramsar.jpg";
import BandarAbbas from "/src/images/cities/bandar_abbas.jpg";
import Qeshm from "/src/images/cities/qeshm.jpg";
import Kish from "/src/images/cities/kish.jpg";

const cityGroups = [
  {
    variant: "light",
    cities: [
      {
        img: Mashhad,
        alt: "Mashhad",
        href: "/cities/mashhad",
        title: "Mashhad",
        description:
          "Home to the holy shrine of Imam Reza (AS), Mashhad is one of the most important pilgrimage destinations in the Islamic world, surrounded by bazaars and spiritual energy.",
      },
      {
        img: Qum,
        alt: "Qum",
        href: "/cities/qum",
        title: "Qum",
        description:
          "A major religious center with seminaries, shrines, and traditional streets where history, scholarship, and faith come together.",
      },
      {
        img: Tehran,
        alt: "Tehran",
        href: "/cities/tehran",
        title: "Tehran",
        description:
          "Iran’s lively capital blends museums, modern cafés, and bazaars with views of the Alborz mountains and a dynamic urban culture.",
      },
      {
        img: Isfahan,
        alt: "Isfahan",
        href: "/cities/isfahan",
        title: "Isfahan",
        description:
          "Famous for its turquoise domes, historic bridges, and grand squares, Isfahan is often called “half the world” for its beauty and heritage.",
      },
    ],
  },

  {
    variant: "dark",
    cities: [
      {
        img: Kashan,
        alt: "Kashan",
        href: "/cities/kashan",
        title: "Kashan",
        description:
          "A desert-edge city known for elegant historic houses, traditional baths, and rosewater fragrance during spring.",
      },
      {
        img: Yazd,
        alt: "Yazd",
        href: "/cities/yazd",
        title: "Yazd",
        description:
          "Adobe alleys, windcatchers, and Zoroastrian heritage make this desert city feel timeless under glowing desert skies.",
      },
      {
        img: Shiraz,
        alt: "Shiraz",
        href: "/cities/shiraz",
        title: "Shiraz",
        description:
          "Known for poetry, gardens, and nearby Persepolis, Shiraz captures the romantic, artistic spirit of Iran.",
      },
      {
        img: Tabriz,
        alt: "Tabriz",
        href: "/cities/tabriz",
        title: "Tabriz",
        description:
          "Once a key Silk Road hub, Tabriz offers a UNESCO-listed bazaar, rich Azeri culture, and mountain landscapes.",
      },
    ],
  },

  {
    variant: "light",
    cities: [
      {
        img: Kerman,
        alt: "Kerman desert and fort",
        href: "/cities/kerman",
        title: "Kerman",
        description:
          "Gateway to the Lut Desert and historic citadels, Kerman mixes desert adventure with centuries of trading history.",
      },
      {
        img: Hamedan,
        alt: "Hamedan city view",
        href: "/cities/hamedan",
        title: "Hamedan",
        description:
          "One of Iran’s oldest cities, associated with ancient Ecbatana and surrounded by fresh mountain air.",
      },
      {
        img: Rasht,
        alt: "Rasht green landscape",
        href: "/cities/rasht",
        title: "Rasht",
        description:
          "A culinary capital in the lush north, Rasht offers vibrant food culture and easy access to forests and the Caspian.",
      },
      {
        img: Qazvin,
        alt: "Qazvin historic gate",
        href: "/cities/qazvin",
        title: "Qazvin",
        description:
          "A former royal capital with caravanserais, calligraphy heritage, and quick access to Alamut Valley.",
      },
    ],
  },

  {
    variant: "dark",
    cities: [
      {
        img: Ramsar,
        alt: "Ramsar sea and forest",
        href: "/cities/ramsar",
        title: "Ramsar",
        description:
          "Where the Caspian Sea meets forested mountains, Ramsar is perfect for cable cars, hot springs, and sea views.",
      },
      {
        img: BandarAbbas,
        alt: "Bandar Abbas port and coast",
        href: "/cities/bandar-abbas",
        title: "Bandar Abbas",
        description:
          "A bustling port city on the Persian Gulf with coastal promenades and access to southern islands.",
      },
      {
        img: Qeshm,
        alt: "Qeshm island landscapes",
        href: "/cities/qeshm",
        title: "Qeshm",
        description:
          "Known for dramatic rock formations, mangrove forests, and geosites, Qeshm is an eco-adventurer’s paradise.",
      },
      {
        img: Kish,
        alt: "Kish island coastline",
        href: "/cities/kish",
        title: "Kish",
        description:
          "A relaxed island escape with clear waters, coral beaches, and cycling paths along the shoreline.",
      },
    ],
  },
];
---

<style>
    :root {
        --color-bg: #fdf6ea;
    }
</style>

<section class="bg-(--color-bg) md:pt-18 pt-14">
  <div>
    <header class="mb-12 text-center">
      <h2
        class=" font-heading font-bold text-neutral-800 text-section-heading">
        Cities to Explore in Iran
      </h2>
    </header>

    {cityGroups.map((group) => (
      <CityGroup {...group} />
    ))}
  </div>
</section>
