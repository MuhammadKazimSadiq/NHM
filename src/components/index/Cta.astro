---
import { Image } from "astro:assets";
import Button from "../shared/Button.astro";
import image from "/src/images/index/cta.jpg";
---

<section class="relative overflow-hidden text-white h-120 flex items-center justify-center">
  <Image
    src={image}
    alt="Travel destination background"
    class="absolute inset-0 h-full w-full object-cover"
    priority
  />

  <!-- <div class="absolute inset-0 bg-linear-to-br from-black/70 to-black/45"></div> -->

  <div class="container text-center relative z-10">
    <h2 class="mb-3 text-3xl lg:text-4xl font-heading">
      Book your next trip with us
    </h2>
  </div>
</section>


