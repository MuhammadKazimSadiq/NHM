---
import { Image } from 'astro:assets';

const { img, imgAlt, title, description } = Astro.props;
---
<style>
:root {
  --fd-card-bg: #ffffff;
  --fd-accent: #d4972c;
  --fd-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  --fd-radius-card: 12px;
}

.fd-card {
  background: var(--fd-card-bg);
  border-radius: var(--fd-radius-card);
  box-shadow: var(--fd-shadow);
  overflow: hidden;
  display: flex;
  flex-direction: column;
  height: 100%;
}

.fd-card-image img {
  width: 100%;
  height: 200px;
  object-fit: cover;
  display: block;
  border-radius: var(--fd-radius-card) var(--fd-radius-card) 0 0;
}

.fd-card-body {
  padding: 22px;
  background: #124747;
  flex: 1;
}

.fd-card-body h3 {
  font-family: var(--font-heading);
  font-size: 1.4rem;
  color: var(--fd-accent);
  text-align: center;
  margin: 12px 0 10px;
  text-decoration: underline;
}

.fd-card-body p {
  font-family: var(--font-body);
  font-size: 0.95rem;
  color: white;
  line-height: 1.6;
  text-align: center;
  margin: 0;
}
</style>

<article class="fd-card">
    <div class="fd-card-image">
        <Image src={img} alt={imgAlt} />
    </div>
    <div class="fd-card-body">
        <h3>{title}</h3>
        <p>{description}</p>
    </div>
</article>