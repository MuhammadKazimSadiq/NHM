---
import Button from '../shared/Button.astro'
import tehran from '../../images/index/tehran.jpg'
import shiraz from '../../images/index/shiraz.jpg'
import tabriz from '../../images/index/tabriz.jpg'
import ramsar from '../../images/index/ramsar.jpg'

const experiences = [
  { img: tehran, label: 'Desert Nights' },
  { img: shiraz, label: 'Caravanserai Stays' },
  { img: tabriz, label: 'Culinary Trails' },
  { img: ramsar, label: 'Mountain Escapes' },
]
---

<section id="experiences" class="py-20 bg-white transition-soft">
    <div class="container">
    <header class="text-center max-w-2xl mx-auto mb-12">
        <h2 class="font-heading mb-2 leading-relaxed text-[clamp(1.5rem,5vw,3.75rem)]">Featured Experiences</h2>
        <p class="text-base text-gray-600">
        Go beyond sightseeing with immersive cultural encounters and
        nature escapes.
        </p>
    </header>

    <div class="experiences-row grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-5">
      {experiences.map(exp => (
        <div
          class="bg-center bg-cover relative overflow-hidden rounded-3xl h-64 shadow-xl"
          style={`background-image: url(${exp.img.src});`}
        >
          {/* gradient overlay */}
          <div
            class="absolute inset-0 bg-[linear-gradient(180deg,rgba(0,0,0,0.1),rgba(0,0,0,0.7))]"
            aria-hidden="true"
          ></div>
          <div class="left-5 bottom-4 z-10 absolute text-white text-base">{exp.label}</div>
        </div>
      ))}
    </div>

    <div class="text-center mt-10">
      <Button variant="outline" href="#contact">See more</Button>
    </div>
    </div>
</section>