---
import Button from '../shared/Button.astro';
import { Image } from 'astro:assets';
import featured_1 from '../../images/index/featured-1.jpg';
import featured_2 from '../../images/index/featured-2.jpg';
import featured_3 from '../../images/index/featured-3.jpg';
import featured_4 from '../../images/index/featured-4.jpg';

const experiences = [
  { img: featured_1, label: 'Fishing' },
  { img: featured_2, label: 'Boating' },
  { img: featured_3, label: 'Bazaar' },
  { img: featured_4, label: 'Historical Sites' },
];
---

<section id="experiences" class="py-20 bg-white">
  <div class="container">
    <header class="text-center max-w-2xl mx-auto mb-12">
      <h2 class="font-heading mb-2 leading-relaxed text-section-heading">
        Featured Experiences
      </h2>
    </header>

    <div class="experiences-row grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-5">
      {experiences.map((exp) => (
        <div class="relative overflow-hidden rounded-3xl h-120 shadow-xl group fade-in" style="animation-delay: calc(sibling-index() * 100ms);">
          <Image
            src={exp.img}
            alt={exp.label}
            class="absolute inset-0 w-full h-full object-cover transition-all duration-300 group-hover:brightness-110"
            loading="lazy"
          />
          {/* gradient overlay */}
          <div
            class="absolute inset-0 bg-[linear-gradient(180deg,rgba(0,0,0,0.1),rgba(0,0,0,0.7))] transition-all duration-300 group-hover:opacity-90"
            aria-hidden="true"
          ></div>
          <div class="absolute left-5 bottom-4 z-10 text-white text-base group-hover:drop-shadow-lg transition-all duration-300">
            {exp.label}
          </div>
        </div>
      ))}
    </div>

    <div class="text-center mt-10">
      <Button variant="outline" href="#contact">See more</Button>
    </div>
  </div>
</section>
