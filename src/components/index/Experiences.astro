---
import tehran from '../../images/index/tehran.jpg'
import shiraz from '../../images/index/shiraz.jpg'
import tabriz from '../../images/index/tabriz.jpg'
import ramsar from '../../images/index/ramsar.jpg'

const experiences = [
  { img: tehran, label: 'Desert Nights' },
  { img: shiraz, label: 'Caravanserai Stays' },
  { img: tabriz, label: 'Culinary Trails' },
  { img: ramsar, label: 'Mountain Escapes' },
]
---

<style>
.experiences-row {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 1.2rem;
}

.experience-card {
  height: 260px;
  position: relative;
  border-radius: 20px;
  background-size: cover;
  background-position: center;
  box-shadow: var(--shadow-soft);
  overflow: hidden;
}

.experience-card::before {
  content: "";
  position: absolute;
  inset: 0;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0.7));
}

.experience-label {
  position: absolute;
  left: 1.1rem;
  bottom: 1rem;
  color: white;
  font-size: 0.9rem;
  z-index: 2;
}

.section-cta {
  text-align: center;
  margin-top: 2.5rem;
}
</style>

<section id="experiences" class="section section-alt">
    <div class="container">
    <header class="section-header">
        <h2>Featured Experiences</h2>
        <p>
        Go beyond sightseeing with immersive cultural encounters and
        nature escapes.
        </p>
    </header>

    <div class="experiences-row">
      {experiences.map(exp => (
        <div
          class="experience-card"
          style={`background-image: url(${exp.img.src});`}
        >
          <div class="experience-label">{exp.label}</div>
        </div>
      ))}
    </div>

    <div class="section-cta">
        <a href="#contact" class="btn btn-outline">See more experiences</a>
    </div>
    </div>
</section>