---
import { Image } from "astro:assets";
import heroImg from "/src/images/index/hero.jpg";
---

<header class="relative min-h-[85vh] md:min-h-screen overflow-hidden text-white">
  <!-- Parallax wrapper -->
  <div
    id="hero-parallax"
    class="absolute inset-0 will-change-transform"
  >
    <!-- Mobile image layer -->
    <div class="absolute inset-0 block md:hidden">
      <Image
        src={heroImg}
        alt="Iran travel landscape"
        priority
        class="h-[120%] w-full object-cover"
      />
    </div>

    <!-- Desktop video layer -->
    <div class="absolute inset-0 hidden md:block">
      <video
        class="h-[120%] w-full object-cover"
        src="/videos/hero.mp4"
        autoplay
        muted
        loop
        playsinline
        preload="none"
        poster={heroImg.src}
      ></video>
    </div>
  </div>

  <!-- Content -->
  <div class="relative z-10 flex min-h-[85vh] md:min-h-screen flex-col">
    <div class="container flex flex-1 flex-col justify-center pb-20">
      <h1 class="mb-3 font-heading text-hero-heading drop-shadow-[0_12px_32px_rgba(0,0,0,0.9)] text-center">
        Travel to Wonderful Iran
      </h1>

      <div class="flex justify-center">
        <button
          type="button"
          class="
            inline-flex items-center justify-center
            rounded-lg
            font-semibold tracking-[0.02em]
            bg-[#e1a730] text-black
            shadow-[0_10px_20px_rgba(0,0,0,0.18)]
            transition-all duration-200 ease
            cursor-pointer
            text-base sm:text-lg md:text-xl
            px-6 sm:px-8 md:px-12
            py-3 sm:py-3.5 md:py-4
            hover:-translate-y-px
            hover:shadow-[0_16px_32px_rgba(0,0,0,0.22)]
            active:translate-y-0
            active:shadow-[0_8px_16px_rgba(0,0,0,0.18)">
          Book Now
        </button>

      </div>
    </div>
  </div>
</header>