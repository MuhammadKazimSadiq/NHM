---
import IntroImage from './IntroImage.astro';
import intro_1 from '../../images/index/intro-1.png'
import intro_2 from '../../images/index/intro-2.png'
---

<style>
:root {
    --intro-accent: #d4972c;
    --intro-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
}
</style>

 <section id="intro" class="intro-nhm bg-white py-10 md:py-16 px-0">
        <div class="intro-container max-w-300 mx-auto px-10 grid grid-cols-1 md:grid-cols-2 gap-x-10 lg:gap-x-24 gap-y-10 items-center">
            <!-- Left Column – Text -->
            <div class="intro-text fade-left">
                <h2 class="font-bold leading-[1.6] tracking-normal mb-5 text-center text-neutral-800 font-heading text-heading-xl">
                    Travel to Iran with
                    <span class="accent text-(--intro-accent) underline">NHM Travels!</span>
                </h2>

                <p class="font-body font-light text-lg leading-[1.75] max-w-140 mt-5 text-center text-neutral-700">
                    NHM Travels has been offering trips to Iran
                    <br />
                    since time. Book your unique and
                    <br />
                    unforgettable trip now!
                </p>
                </div>


            <!-- Right Column – Images -->
            <div class="intro-images flex flex-col gap-5 fade-right">
                <IntroImage img={intro_1} altImg="Iran architecture dome turquoise" />
                <IntroImage img={intro_2} altImg="Iran sunset landscape" />
            </div>
        </div>
    </section>