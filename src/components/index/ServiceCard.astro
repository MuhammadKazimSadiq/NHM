---
import { Image } from "astro:assets";
const { img, alt, title, subtitle, items } = Astro.props;
---

<div class="max-w-sm bg-white rounded-2xl shadow-lg overflow-hidden flex flex-col">
  <!-- Image section -->
  <div class="relative h-60">
    <Image src={img} alt={alt} class="block h-60 w-full object-cover" />
    <div class="absolute inset-0 bg-linear-to-b from-transparent to-black/40"></div>
    <div class="absolute bottom-4 left-4 text-white">
      <h3 class="text-xl font-bold">{title}</h3>
      <p class="text-sm">{subtitle}</p>
    </div>
  </div>

  <!-- Content section -->
  <div class="p-6 bg-[#FFF8EC] flex flex-col flex-1 justify-between">
    <ul class="mb-6 space-y-2 text-gray-800">
      {items.map((item:string) => (
        <li class="flex items-start">â€¢ {item}</li>
      ))}
    </ul>

    <div class="text-center w-full mt-auto">
      <a href="#"
        class="inline-block bg-[#ff8c00] text-white font-semibold px-6 py-4 rounded-full shadow hover:bg-[#ff8c00]/80 transition-colors duration-200 underline tracking-loose w-full"
      >
        LEARN MORE
      </a>
    </div>
  </div>
</div>

