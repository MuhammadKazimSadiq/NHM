---
import ServiceCard from "./ServiceCard.astro"

const services = [
  {
    icon: "✦",
    title: "Tailor-Made Itineraries",
    items: [
      "Custom routes and flexible travel dates",
      "Handpicked boutique stays and eco-lodges",
      "Private guides, drivers and local experts",
    ],
  },
  {
    icon: "✈",
    title: "Guided Group Tours",
    items: [
      "Small groups for a more personal feel",
      "Themed departures focused on culture and nature",
      "All logistics handled from arrival to departure",
    ],
  },
  {
    icon: "❤",
    title: "On-Trip Support",
    items: [
      "24/7 assistance during your journey",
      "Restaurant and activity recommendations and bookings",
      "Help with changes, extensions or emergencies",
    ],
  },
];
---

<section
  id="services"
  class="bg-neutral-100 py-20"
>
  <div class="container">
    <!-- Header -->
    <header class="mb-12 text-center">
      <h2
        class="
          font-heading
          text-3xl
          font-bold
          text-neutral-800
          md:text-[2.6rem]
        "
      >
        Our Services
      </h2>
    </header>

    <!-- Grid -->
    <div
      class="
        grid gap-6
        sm:grid-cols-2
        lg:grid-cols-3
      "
    >
      {services.map((service) => (
        <ServiceCard {...service} />
      ))}
    </div>
  </div>
</section>
