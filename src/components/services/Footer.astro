---
import { Image } from "astro:assets"
import Logo from "/src/images/logo.png"
---

<footer class="bg-black text-white p-10">
  <!-- Header -->
  <div class="flex items-center gap-2.5 mb-8">
      <Image src={Logo} alt="NHM Travales Logo" class="w-10 h-10" />
    <span class="text-lg font-bold tracking-wide">
      nhm TRAVELS
    </span>
  </div>

  <!-- Hero block -->
  <div
    class="
      relative
      h-100
      mb-10
      rounded-2xl
      bg-[url('/src/images/services/footer-bg.jpg')]
      bg-cover bg-center
      flex flex-col items-center justify-center
      text-center
      p-10
    "
  >
    <h2
      class="
        text-5xl font-bold mb-4
        drop-shadow-md
        max-md:text-4xl
      "
    >
      Book your trip <span>with Us</span>
    </h2>
    <p class="text-lg opacity-80">
      Make unforgettable memories!
    </p>
  </div>

  <!-- Footer content -->
  <div
    class="
      flex flex-wrap justify-between gap-8
      px-8
      max-md:flex-col
    "
  >
    <!-- Phone -->
    <div class="flex-1 min-w-64">
      <h3 class="text-xl mb-5 text-neutral-300">Phone</h3>
      <p class="text-lg">+98 939 659 7862</p>
    </div>

    <!-- Email -->
    <div class="flex-1 min-w-64">
      <h3 class="text-xl mb-5 text-neutral-300">Email</h3>
      <p class="text-lg">support@irantourismtravels.com</p>
    </div>

    <!-- Socials -->
    <div class="flex-1 min-w-64">
      <h3 class="text-xl mb-5 text-neutral-300">
        Follow us on our socials!
      </h3>

      <div class="flex gap-4 mt-4">
        <!-- Facebook -->
        <div
          class="
            w-7.5 h-7.5
            rounded-full
            flex items-center justify-center
            transition-all duration-300
            hover:bg-[#007a7a]
            hover:scale-110
          "
        >
          <!-- facebook svg -->
          <svg
                  xmlns="http://www.w3.org/2000/svg"
