---
import OfferCard from "./OfferCard.astro"
import Staff from "../../images/services/staff.jpg"
import Flight from "../../images/services/flight.jpg"
import Ticket from "../../images/services/Ticket.jpg"
import Tourism from "../../images/services/Tourism.jpg"

const offers = [
  {
    title: "Multilingual Staff",
    image: Staff,
  },
  {
    title: "From arrival to departure care",
    image: Flight,
  },
  {
    title: "Ticketing and Visa Services",
    image: Ticket,
  },
  {
    title: "Tourism services",
    image: Tourism,
  },
];
---

<section class="bg-[#fafafa] px-6 py-20 text-center">
  <!-- Heading -->
  <h2 class="mb-4 text-5xl font-bold text-gray-800 max-md:text-4xl">
    What We <span class="text-teal-700">Can Offer You</span>
  </h2>

  <!-- Description -->
  <p class="mx-auto mb-12 max-w-3xl text-lg text-gray-600">
    Add a short description of the business and the services that you provide.
  </p>

  <!-- Cards -->
  <div class="flex flex-wrap justify-center gap-5">
    {offers.map((offer) => (
      <OfferCard {...offer} />
    ))}
  </div>
</section>