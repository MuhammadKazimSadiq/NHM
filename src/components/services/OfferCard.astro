---
import { Image } from "astro:assets";
const {image, title} = Astro.props;
---

<div
  class="relative h-62 w-full rounded-4xl overflow-hidden flex items-end transition hover:-translate-y-1 sm:w-72 lg:w-[23%] fade-in" style="animation-delay: calc(sibling-index() * 100ms);">
  <Image
    src={image}
    alt={title}
    class="absolute inset-0 h-full w-full object-cover"
    loading="lazy"
  />

  <div class="absolute inset-0 bg-linear-to-t from-black/60 to-black/10"></div>

  <div class="relative p-5 text-left">
    <h3 class="text-lg font-semibold text-white">
      {title}
    </h3>
  </div>
</div>