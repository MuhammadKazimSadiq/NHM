---
import { Image } from "astro:assets";
const {image, title} = Astro.props;
---

<div
    class="relative h-62 w-[23%] min-w-56 rounded-4xl overflow-hidden flex items-end transition hover:-translate-y-1 max-xl:w-56">
    <Image
        src={image} alt={title}
        class="absolute inset-0 h-full w-full object-cover"
        loading="lazy"
    />

    <div class="absolute inset-0 bg-linear-to-t from-black/60 to-black/10"></div>

    <div class="relative p-5 text-left">
        <h3 class="text-lg font-semibold text-white">
        {title}
        </h3>
    </div>
</div>