---
import { Image } from "astro:assets";

const { image, title, description } = Astro.props;
---

<div class="w-full xl:w-[30%] group fade-in" style="animation-delay: calc(sibling-index() * 100ms);">
  <!-- Image card -->
  <div class="relative h-100 rounded-3xl overflow-hidden flex items-end">
    <Image
      src={image}
      alt={title}
      class="absolute inset-0 h-full w-full object-cover transition-all duration-300 group-hover:brightness-110"
    />

    <!-- Overlay -->
    <div class="absolute inset-0 bg-black/30 transition-all duration-300 group-hover:opacity-90"></div>

    <h3 class="relative mb-5 ml-5 w-[70%] text-xl lg:text-lg font-semibold text-white drop-shadow group-hover:drop-shadow-lg transition-all duration-300">
      {title}
    </h3>
  </div>

  <!-- Text -->
  <p class="mt-4 text-white text-lg leading-relaxed">
    {description}
  </p>
</div>
