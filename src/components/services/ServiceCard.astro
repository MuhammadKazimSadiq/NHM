---
import { Image } from "astro:assets";

const { image, title, description } = Astro.props;
---

<div class="w-full xl:w-[30%]">
  <!-- Image card -->
  <div class="relative h-100 rounded-3xl overflow-hidden flex items-end">
    <Image
      src={image}
      alt={title}
      class="absolute inset-0 h-full w-full object-cover"
    />

    <!-- Overlay -->
    <div class="absolute inset-0 bg-black/30"></div>

    <h3
      class="
        relative
        mb-5
        ml-5
        w-[70%]
        text-lg
        font-semibold
        text-white
        drop-shadow
      "
    >
      {title}
    </h3>
  </div>

  <!-- Text -->
  <p class="mt-4 text-white text-base leading-relaxed">
    {description}
  </p>
</div>
